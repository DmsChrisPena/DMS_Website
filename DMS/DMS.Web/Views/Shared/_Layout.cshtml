<!DOCTYPE html>
<html ng-app="DMSApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>DMS</title>
    <base href="/">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
</head>
<body>
    <div class="md-topbar">
        <div class="topbar" layout="row">
            <ul class="left" flex="50">
                <li>
                    <a href="mailto:info@dmshouston.com?Subject=Hello DMS Team" target="_top">
                        <i class="fa fa-envelope"></i>
                    </a>
                &nbsp;</li> | 
                <li>&nbsp;
                    <a>
                        <i class="fa fa-phone"></i>
                    </a>
                </li>
            </ul>
            <ul class="right" flex="50">
                <li>
                    <a>
                        Sign In
                    </a>
                </li> |
                <li>
                    <a>
                        Create Account
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <md-toolbar ng-controller="NavBarController as vm">
        <div class="navbar" layout="row">
            <ul class="left" flex="20">
                <li>
                    <md-button ui-sref="index">
                        <img src="~/Img/DMS_Logo_White.png" class="center-block" alt="DMS Logo" />
                    </md-button>
                </li>
            </ul>
            <ul class="right" flex="80">
                <li>
                    <md-menu md-offset="0 90">
                        <md-button aria-label="Open about interactions menu" ng-click="vm.openMenu($mdOpenMenu, $event)">Solutions</md-button>
                        <md-menu-content width="2">
                            <md-menu-item>
                                <md-button ui-sref="gaspro">
                                    GasPro
                                </md-button>
                            </md-menu-item>
                            <md-menu-item>
                                <md-button ui-sref="gastrak">
                                    GasTrak
                                </md-button>
                            </md-menu-item>
                            <md-menu-item>
                                <md-button ui-sref="energypro">
                                    EnergyPro
                                </md-button>
                            </md-menu-item>
                        </md-menu-content>
                    </md-menu>
                </li>
                <li>
                    <md-menu md-offset="0 90">
                        <md-button aria-label="Open about interactions menu" ng-click="vm.openMenu($mdOpenMenu, $event)">Services</md-button>
                        <md-menu-content width="2">
                            <md-menu-item>
                                <md-button ui-sref="services.consulting">
                                    Consulting
                                </md-button>
                            </md-menu-item>
                            <md-menu-item>
                                <md-button ui-sref="services.front">
                                    Trading
                                </md-button>
                            </md-menu-item>
                            <md-menu-item>
                                <md-button ui-sref="services.middle">
                                    Logistics
                                </md-button>
                            </md-menu-item>
                            <md-menu-item>
                                <md-button ui-sref="services.back">
                                    Accounting/Settlement
                                </md-button>
                            </md-menu-item>
                        </md-menu-content>
                    </md-menu>
                </li>
                <li>
                    <md-menu md-offset="0 90">
                        <md-button aria-label="Open about interactions menu" ng-click="vm.openMenu($mdOpenMenu, $event)">Learn</md-button>
                        <md-menu-content width="2">
                            <md-menu-item>
                                <md-button ui-sref="education.academic">
                                    University
                                </md-button>
                            </md-menu-item>
                            <md-menu-item>
                                <md-button ui-sref="education.certification">
                                    Certification
                                </md-button>
                            </md-menu-item>
                            <md-menu-item>
                                <md-button ui-sref="education.publications">
                                    Publications
                                </md-button>
                            </md-menu-item>
                        </md-menu-content>
                    </md-menu>
                </li>
                <li>
                    <md-menu md-offset="0 90">
                        <md-button aria-label="Open about interactions menu" ng-click="vm.openMenu($mdOpenMenu, $event)">About</md-button>
                        <md-menu-content width="2">
                            <md-menu-item>
                                <md-button ui-sref="about.profile">
                                    About Us
                                </md-button>
                            </md-menu-item>
                            <md-menu-item>
                                <md-button ui-sref="about.history">
                                    Our History
                                </md-button>
                            </md-menu-item>
                            <md-menu-item>
                                <md-button ui-sref="about.testimonials">
                                    Proven
                                </md-button>
                            </md-menu-item>
                        </md-menu-content>
                    </md-menu>
                </li>
            </ul>
        </div>
    </md-toolbar>
        @RenderBody()

    <section layout="row" id="md-footer" layout-wrap>
        <div flex="40">
            <h2>Contact Info &nbsp; <i class="fa fa-map"></i></h2>
            <ul>
                <li>
                    <p><i class="fa fa-map-marker"></i> &nbsp; 17515 Spring Cypress, Suite C-155 Cypress, TX 77429</p>
                </li>
                <li>
                    <p><i class="fa fa-phone"></i> &nbsp; Phone: 713-408-7835</p>
                </li>
                <li>
                    <p><i class="fa fa-envelope"></i> &nbsp; Email: DmsHelp@dmshouston.com</p>
                </li>
            </ul>
        </div>
        <div flex="40">
            <h2>Newsletter &nbsp; <i class="fa fa-newspaper-o"></i></h2>
            <p>Receive regular updates about our product and special events</p>
            <!-- Begin MailChimp Signup Form -->
            <div id="mc_embed_signup">
                <form action="//Cougrammers.us10.list-manage.com/subscribe/post?u=864faf817a8c73031b9b4c83a&amp;id=20c1c0c569" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                    <div id="mc_embed_signup_scroll">
                        <div class="mc-field-group">
                            <label for="mce-EMAIL">
                                Email:
                            </label>
                            <input type="email" placeholder="youremail@domain.com" name="EMAIL" class="required email" id="mce-EMAIL">
                            <input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button">
                        </div>
                        <div id="mce-responses" class="clear">
                            <div class="response" id="mce-error-response" style="display:none"></div>
                            <div class="response" id="mce-success-response" style="display:none"></div>
                        </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                        <div style="position: absolute; left: -5000px;"><input type="text" name="b_864faf817a8c73031b9b4c83a_20c1c0c569" tabindex="-1" value=""></div>
                        <div class="clear"></div>
                    </div>
                </form>
            </div>
            <!--End mc_embed_signup-->
        </div>
        <div flex="20">
            <h2>Social Media &nbsp; <i class="fa fa-share-square"></i></h2>
            <p>
                <a href="#"><i class="fa fa-facebook-square"></i></a> <br />
                <i class="fa fa-twitter-square"></i>
                <i class="fa fa-instagram"></i> <br />
                <i class="fa fa-linkedin-square"></i>
                <i class="fa fa-google-plus-square"></i>
                <i class="fa fa-pinterest-square"></i>
            </p>
                
        </div>
    </section>
    <section id="bottom-bar">
        <p>All Rights Reserved Data Management Solutions &copy;</p>
    </section>
  
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-material-icons/0.5.0/angular-material-icons.min.js"></script> 
</body>
</html>
