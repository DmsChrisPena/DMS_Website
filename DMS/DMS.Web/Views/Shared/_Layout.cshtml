            <ul flex="10">
                <li>
                    <md-button class="md-icon-button" aria-label="Contact Us"><i class="fa fa-envelope-o"></i></md-button>
                </li>
            </ul>
        </div>
    </md-toolbar>

        @RenderBody()

    <section layout="row" id="md-footer" layout-wrap>
        <div flex="33" class="about-dms">
            <div>
                <img src="../../../Img/DMSTextLogo_White.png" class="img-responsive center-block" style="height: 80px;" alt="DMS Logo" />
            </div>
            <p>As simple as you want it, as complex as you need it.</p>
            <p>The New and Revolutionary Approach of Providing a Proven and Affordable ETRM Solution.</p>
        </div>
        <div flex="33" class="find-us">
            <h4>Find Us</h4>
            <ul>
                <li>
                    <p><i class="fa fa-map-marker"></i> &nbsp; Address:&nbsp; 17515 Spring Cypress, Suite C-155 Cypress, TX 77429</p>
                </li>
                <li>
                    <p><i class="fa fa-phone"></i> &nbsp; Phone:&nbsp; (713) 408-7835</p>
                </li>
                <li>
                    <p><i class="fa fa-envelope"></i> &nbsp; Email:&nbsp; DmsHelp@dmshouston.com</p>
                </li>
            </ul>
        </div>
        <div flex="33" layout="column">
            <div flex="100" class="newsletter-footer">
                <h4>Newsletter</h4>
                <!-- Begin MailChimp Signup Form -->
                <div id="mc_embed_signup">
                    <form action="//Cougrammers.us10.list-manage.com/subscribe/post?u=864faf817a8c73031b9b4c83a&amp;id=20c1c0c569" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                        <div id="mc_embed_signup_scroll" layout="row" layout-wrap>
                            <div class="mc-field-group" flex="50">
                                <md-input-container class="newsletter-first" md-no-float>
                                    <input type="text" value="" placeholder="First Name" name="FNAME" class="" id="mce-FNAME">
                                </md-input-container>
                            </div>
                            <div class="mc-field-group" flex="50">
                                <md-input-container class="newsletter-second" md-no-float>
                                    <input type="text" value="" placeholder="Last Name" name="LNAME" class="" id="mce-LNAME">
                                </md-input-container>
                            </div>
                            <div class="mc-field-group" flex="100">
                                <md-input-container class="newsletter-third" md-no-float>
                                    <input type="email" value="" placeholder="Email" name="EMAIL" class="required email" id="mce-EMAIL">
                                </md-input-container>
                            </div>
                            <div id="mce-responses" class="clear">
                                <div class="response" id="mce-error-response" style="display:none"></div>
                                <div class="response" id="mce-success-response" style="display:none"></div>
                            </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                            <div style="position: absolute; left: -5000px;"><input type="text" name="b_864faf817a8c73031b9b4c83a_20c1c0c569" tabindex="-1" value=""></div>
                            <div style="width: 100%; margin-top: 10px;" class="clear md-actions" layout="row" layout-align="center center">
                                <input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button md-button md-raised md-primary">
                            </div>
                        </div>
                    </form>
                </div>

                <!--End mc_embed_signup-->
            </div>
            <div flex="100" class="social-media">
