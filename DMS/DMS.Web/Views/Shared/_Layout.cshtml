    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/SliderJS/jquery.themepunch.revolution.min.js"></script>
    <script src="~/Scripts/SliderJS/jquery.themepunch.tools.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-material-icons/0.5.0/angular-material-icons.min.js"></script> 

    
    <script>
        $("#stick-ul1").hide();
        $("#stick-ul2").hide();
        $("#stick-ul3").hide();
        $(window).bind('scroll', function () {
            if ($(window).scrollTop() > 100) {
                $("#sticky-header").addClass("remove-display");
                $("#stick-ul1").show();
                $("#stick-ul2").show();
                $("#stick-ul3").show();
            } else {
                $("#sticky-header").removeClass("remove-display");
                $("#stick-ul1").hide();
                $("#stick-ul2").hide();
                $("#stick-ul3").hide();
            }
        });
    </script>
</body>
</html>
