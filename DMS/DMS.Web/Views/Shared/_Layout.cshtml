<!DOCTYPE html>
<html ng-app="DMSApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>DMSolutions</title>
    <base href="/">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
</head>
<body>

    <md-toolbar ng-controller="NavBarController as vm">
        <div class="navbar" layout="row">
            <ul flex="100">
                <li>
                    <md-button ui-sref="index" aria-label="Home">
                        <img src="~/Img/shadowdmslogo_small2.png" class="center-block" alt="DMS Logo" />
                    </md-button>
                    <md-button ui-sref="products">Products</md-button>
                    <md-button aria-label="Open Services Page" ui-sref="services">Services</md-button>
                    <md-button aria-label="Open Learn Page" ui-sref="education">Education</md-button>
                    <md-button aria-label="Open about interactions menu" ng-click="" ui-sref="testimonials">Testimonials</md-button>
                    <md-button aria-label="Open about interactions menu" ng-click="" ui-sref="about">About</md-button>
                    <a class="md-button" aria-label="Home" ng-click="vm.openContactUs();">
                        <i class="fa fa-envelope"></i>
                    </a>
                    @*<md-button aria-label="Contact Us" ng-click="" ui-sref="about"><i class="fa fa-envelope-o"></i></md-button>*@
                </li>
            </ul>
        </div>
    </md-toolbar>

    <div ng-include="'/app/components/contact/sidenavContactUs.html'"></div>

        @RenderBody()

    <section id="md-footer" ng-controller="NavBarController as vm">
        <div class="container" layout="row" layout-wrap>
            <div flex="100" flex-gt-md="33" class="about-dms">
                <div>
                    <img src="../../../Img/white-logo-myanmar.png" class="img-responsive" style="height: 80px; padding-top: 10px;" alt="DMS Logo" />
                </div>
                <p>Solutions. As simple as you want, as robust as you need.</p>
                <p>The New and Revolutionary Approach of Providing Proven and Affordable ETRM Solutions.</p>
            </div>
            <div flex="100" flex-gt-md="33" class="find-us">
                <h4>Find Us</h4>
                <ul>
                    <li>
                        <p><i class="fa fa-map-marker"></i> &nbsp; Address:&nbsp; 17515 Spring Cypress, Suite C-155 Cypress, TX 77429</p>
                    </li>
                    <li>
                        <p><i class="fa fa-phone"></i> &nbsp; Phone:&nbsp; (713) 408-7835</p>
                    </li>
                    <li>
                        <p><i class="fa fa-envelope"></i> &nbsp; Email:&nbsp; DmsHelp@dmshouston.com</p>
                    </li>
                </ul>
            </div>
            <div flex="100" flex-gt-md="33">
                <div flex="100" class="newsletter-footer">
                    <h4>Newsletter</h4>
                    <!-- Begin MailChimp Signup Form -->
                    <div id="mc_embed_signup">
                        <form action="//dmshouston.us12.list-manage.com/subscribe/post?u=85101afdf28cb6f5dc4a92996&amp;id=16cd8e266d" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                            <div id="mc_embed_signup_scroll" layout="row" layout-wrap>
                                <div class="mc-field-group" flex="100" flex-gt-sm="50" style="padding-bottom: 10px;">
                                    <md-input-container class="newsletter-first" md-no-float>
                                        <input type="text" value="" placeholder="First Name" name="FNAME" class="" id="mce-FNAME">
                                    </md-input-container>
                                </div>
                                <div class="mc-field-group" flex="100" flex-gt-sm="50">
                                    <md-input-container class="newsletter-second" md-no-float>
                                        <input type="text" value="" placeholder="Last Name" name="LNAME" class="" id="mce-LNAME">
                                    </md-input-container>
                                </div>
                                <div class="mc-field-group" flex="100">
                                    <md-input-container class="newsletter-third" md-no-float>
                                        <input type="email" value="" placeholder="Email" name="EMAIL" class="required email" id="mce-EMAIL">
                                    </md-input-container>
                                </div>
                                <div id="mce-responses" class="clear">
                                    <div class="response" id="mce-error-response" style="display:none"></div>
                                    <div class="response" id="mce-success-response" style="display:none"></div>
                                </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                                <div style="position: absolute; left: -5000px;"><input type="text" name="b_864faf817a8c73031b9b4c83a_20c1c0c569" tabindex="-1" value=""></div>
                                <div style="width: 100%; margin-top: 10px;" class="clear md-actions" layout="row" layout-align="center center">
                                    <input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button md-button md-raised md-primary">
                                </div>
                            </div>
                        </form>
                    </div>

                    <!--End mc_embed_signup-->
                </div>
                <div flex="100" class="social-media">
                    <h4>Social Media</h4>
                    <ul>
                        <li>
                            <a href="#">
                                <i class="fa fa-facebook-square"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fa fa-twitter-square"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fa fa-linkedin-square"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fa fa-google-plus-square"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <section id="subfooter">
            <md-button ui-sref="index">Home</md-button>
            <md-button ui-sref="products">Products</md-button>
            <md-button ui-sref="services">Services</md-button>
            <md-button ui-sref="education">Education</md-button>
            <md-button ui-sref="testimonials">Testimonials</md-button>
            <md-button ui-sref="about">About</md-button>
            <md-button ui-sref="" ng-click="vm.openContactUs();">Contact Us</md-button>
        </section>
    </section>

